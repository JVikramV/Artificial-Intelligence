# 8 Puzzle using IDDFS (Iterative Deepening Depth First Search)

GOAL_STATE = ((1, 2, 3),
              (4, 5, 6),
              (7, 8, 0))  # 0 = blank tile


def find_blank(state):
    for i in range(3):
        for j in range(3):
            if state[i][j] == 0:
                return i, j


def get_neighbors(state):
    neighbors = []
    x, y = find_blank(state)

    directions = [(-1, 0), (1, 0), (0, -1), (0, 1)]  # Up, Down, Left, Right

    for dx, dy in directions:
        nx, ny = x + dx, y + dy

        if 0 <= nx < 3 and 0 <= ny < 3:
            new_state = [list(row) for row in state]
            new_state[x][y], new_state[nx][ny] = new_state[nx][ny], new_state[x][y]
            neighbors.append(tuple(map(tuple, new_state)))

    return neighbors


def print_state(state):
    for row in state:
        print(row)
    print()


def dls(state, goal, depth, path, visited):
    if state == goal:
        return path + [state]

    if depth == 0:
        return None

    visited.add(state)

    for neighbor in get_neighbors(state):
        if neighbor not in visited:
            result = dls(neighbor, goal, depth - 1, path + [state], visited)
            if result:
                return result

    return None


def iddfs(initial_state, goal_state, max_depth=20):
    for depth in range(max_depth):
        visited = set()
        result = dls(initial_state, goal_state, depth, [], visited)
        if result:
            return result
    return None


# -------- MAIN PROGRAM --------

INITIAL_STATE = ((1, 2, 3),
                 (4, 0, 6),
                 (7, 5, 8))

solution = iddfs(INITIAL_STATE, GOAL_STATE, max_depth=15)

if solution:
    print("Solution found using IDDFS in", len(solution) - 1, "moves:\n")
    for step in solution:
        print_state(step)
else:
    print("No solution found within maximum depth")
